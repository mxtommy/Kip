{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "CreateHost2WidgetSchema",
  "title": "Create Host2 Widget",
  "type": "object",
  "properties": {
    "name": {"type": "string", "description": "Widget machine name without widget- prefix (kebab-case). e.g. tides-chart", "minLength": 3},
    "title": {"type": "string", "description": "Default widget display name / title", "minLength": 3},
    "category": {"type": "string","description": "Add Widget dialog classification category", "enum": ["Core", "Gauge", "Component", "Racing"], "default": "Core"},
    "description": {"type": "string", "description": "Detailed widget description displayed in the Add Widget dialog"},
    "icon": {"type": "string", "description": "Icon key (SVG symbol id)", "default": "placeholder-svg-icon-id"},
    "minWidth": {"type": "number", "default": 1},
    "minHeight": {"type": "number", "default": 1},
    "defaultWidth": {"type": "number", "default": 2},
    "defaultHeight": {"type": "number", "default": 3},
    "pathKey": {"type": "string", "default": "signalKPath"},
    "pathDescription": {"type": "string", "default": "My new widget Options path description"},
    "pathType": {"type": "string", "enum": ["number", "string", "boolean", "Date"], "default": "number"},
    "pathDefault": {"type": ["string", "null"], "default": null},
    "convertUnitTo": {"type": ["string", "null"], "default": null},
    "sampleTime": {"type": "number", "default": 1000},
    "pathRequired": {"type": "boolean", "default": true},
    "isPathConfigurable": {"type": "boolean", "default": true},
    "showPathSkUnitsFilter": {"type": "boolean", "default": true},
    "pathSkUnitsFilter": {"type": ["string", "null"], "default": null},
    "enableTimeout": {"type": "boolean", "default": false},
    "dataTimeout": {"type": "number", "default": 5},
    "ignoreZones": {"type": "boolean", "default": false},
    "displayNameOpt": {"type": "string", "default": "My new widget label"},
    "color": {"type": "string", "default": "contrast"},
    "updateWidgetService": {"type": "string", "enum": ["none", "append", "by-category"], "default": "by-category"},
    "addSpec": {"type": "boolean", "default": true},
    "todoBlock": {"type": "boolean", "default": true},
    "readme": {"type": "boolean", "default": true},
    "interactive": {"type": "boolean", "default": true}
  },
  "required": ["name", "title", "description", "icon"],
  "additionalProperties": false
}
